<%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/aside.ejs') %>

        <!-- Main Content -->
        <section class="dashbaord-content">
            <header>
                <nav>
                    <div class="font-change-btn">
                        <div class="search-btn">
                            <a href="/dashboard" class="btn">Dashboard</a>
                        </div>

                    </div>
                
                </nav>
            </header>
            <main>
                <div class="container mt-4">
                    <h2 class="mb-3">Edit artist details</h2>
                    <form action="/update-artist" method="post">
                        <input type="hidden" name="artist_id" value="<%= artist.artist_id %>">
                        <div class="form-group">
                            <label for="Name"> Name:</label>
                            <input class="form-control" type="text" id="name" name="name"
                                value="<%= artist.name %>" required>
                        </div>
                      
                        <div class="form-group">
                            <label for="nationality">Nationality:</label>
                            <input class="form-control" type="text" id="nationality" name="nationality"
                                value="<%= artist.nationality %>" required>
                        </div>
                        
                
                        <div class="form-group">
                            <label for="style">Style:</label>
                            <input class="form-control" type="text" id="style" name="style"
                                value="<%= artist.style %>" required>

                        </div> <button type="submit" class="btn">Update artist</button>
                    </form>
                </div>

            </main>

            <%- include('./partials/footer.ejs') %>
        </section>


        <%- include('./partials/footer.ejs') %>

        <%- include('./partials/script.ejs') %>

    </body>

    </html>