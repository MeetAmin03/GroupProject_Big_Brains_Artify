<%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/aside.ejs') %>

        <!-- Main Content -->
        <section class="dashbaord-content">
            <header>
                <nav>
                    <div class="font-change-btn">
                        <div class="search-btn">
                            <a href="/dashboard" class="btn">Dashboard</a>
                        </div>

                    </div>
                
                </nav>
            </header>
            <main>
                <div class="container mt-4">
                    <h2 class="mb-3">Edit customer details</h2>
                    <form action="/update-customer" method="post">
                        <input type="hidden" name="customer_id" value="<%= customer.customer_id %>">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input class="form-control" type="text" id="name" name="name"
                                value="<%= customer.name %>" required>
                        </div>
                      
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" type="email" id="email" name="email"
                                value="<%= customer.email %>" required>

                        </div>
                    
                        <div class="form-group">
                            <label for="street">Street:</label>
                            <input class="form-control" type="text" id="street" name="street"
                                value="<%= customer.street %>" required>

                        </div>
                        <div class="form-group">
                            <label for="city">City:</label>
                            <input class="form-control" type="text" id="city" name="city" value="<%= customer.city %>"
                                required>

                        </div>
                        <div class="form-group">
                            <label for="state">State:</label>
                            <input class="form-control" type="text" id="state" name="state"
                                value="<%= customer.state %>" required>

                        </div>
                        <div class="form-group">
                            <label for="zipcode">Zip Code:</label>
                            <input class="form-control" type="text" id="zipcode" name="zipcode"
                                value="<%= customer.zipcode %>" required>
                        </div>
                      
                        </div> <button type="submit" class="btn">Update customer</button>
                    </form>
                </div>

            </main>

            <%- include('./partials/footer.ejs') %>
        </section>


        <%- include('./partials/footer.ejs') %>

        <%- include('./partials/script.ejs') %>

    </body>

    </html>